<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/customize_dashboard_title" >
     
     <!-- Battery -->
     <Preference
          android:id="@+id/battery"
          android:title="@string/category_battery_title"
          android:summary="@string/category_battery_summary"
          android:icon="@drawable/ic_settings_battery_white"
          android:fragment="com.droidx.customize.Battery"
          />
          
     <!-- Buttons -->
     <Preference
          android:id="@+id/buttons"
          android:title="@string/category_buttons_title"
          android:summary="@string/category_buttons_summary"
          android:icon="@drawable/ic_category_buttons"
          android:fragment="com.droidx.customize.Buttons"
          />
          
     <!-- Lockscreen -->
     <Preference
          android:id="@+id/lockscreen"
          android:title="@string/category_lockscreen_title"
          android:summary="@string/category_lockscreen_summary"
          android:icon="@drawable/ic_category_lockscreen"
          android:fragment="com.droidx.customize.LockScreen"
          />
     
     <!-- Misc -->
     <Preference
          android:id="@+id/misc"
          android:title="@string/category_misc_title"
          android:summary="@string/category_misc_summary"
          android:icon="@drawable/ic_category_misc"
          android:fragment="com.droidx.customize.Misc"
          />
          
     <!-- Notifications -->
     <Preference
          android:id="@+id/notifications"
          android:title="@string/category_notifications_title"
          android:summary="@string/category_notifications_summary"
          android:icon="@drawable/ic_category_notifications"
          android:fragment="com.droidx.customize.Notifications"
          />

     <!-- Power Menu -->
     <Preference
          android:id="@+id/powermenu"
          android:title="@string/category_powermenu_title"
          android:summary="@string/category_powermenu_summary"
          android:icon="@drawable/ic_category_powermenu"
          android:fragment="com.droidx.customize.PowerMenu"
          />

     <!-- Quick Settings -->
     <Preference
          android:id="@+id/quick_settings"
          android:title="@string/category_quicksettings_title"
          android:summary="@string/category_quicksettings_summary"
          android:icon="@drawable/ic_category_quicksettings"
          android:fragment="com.droidx.customize.QuickSettings"
          />

     <!-- Statusbar -->
     <Preference
          android:id="@+id/statusbar"
          android:title="@string/category_statusbar_title"
          android:summary="@string/category_statusbar_summary"
          android:icon="@drawable/ic_category_statusbar"
          android:fragment="com.droidx.customize.StatusBar"
          />

     <!-- System -->
     <Preference
          android:id="@+id/system"
          android:title="@string/category_system_title"
          android:summary="@string/category_system_summary"
          android:icon="@drawable/ic_category_system"
          android:fragment="com.droidx.customize.System"
          />
          
</PreferenceScreen>
